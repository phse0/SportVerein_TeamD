
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="data.models.Department" table="department">
        <id name="departmentID" type="integer">
            <column name="departmentID" length=""/> 
            <generator class="increment"/> 
        </id>
        <property name="name" type="string"> 
            <column name="name" length="45" not-null="true"/> 
        </property>
        <bag name="roles" table="role" cascade="all">
            <key column="roleID"></key>
            <one-to-many class="data.models.Role"/>
        </bag>
        <one-to-one name="manager" column="managerID" not-null="true"/>
    </class>
</hibernate-mapping>

